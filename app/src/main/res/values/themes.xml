<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ColorPrincipal</item>
        <item name="colorPrimaryVariant">@color/ColorSecundario</item>
        <item name="colorOnPrimary">@color/ColorPrincipal</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ColorPrincipal</item>
        <item name="colorSecondaryVariant">@color/ColorSecundario</item>
        <item name="colorOnSecondary">@color/ColorPrincipal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Base.Theme.API_Splash_Screen" parent="Theme.Material3.DayNight.NoActionBar"/>
    
    <style name="Theme.API_Splash_Screen" parent="Base.Theme.API_Splash_Screen"/>
    
    <style name="Theme.APISplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/gigspot_icon_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.API_Splash_Screen</item>
    </style>
</resources>